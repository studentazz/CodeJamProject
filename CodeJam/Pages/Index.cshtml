@page
@model IndexModel
@{
    ViewData["Title"] = "CodeJam konkursas";
}


<form action="/" method="post">
    @Html.AntiForgeryToken()
    <div style="color:red">
    @Html.ValidationSummary()
    </div>
    <div class="form-group">
        <label for="sel1">Užduotis:</label>
        <select class="form-control" name="taskId">
            <option value="snieguole">Snieguolė ir 7 nykštukai</option>
            <option value="dazymas">Skaičių dažymas</option>
        </select>
    </div>
    <div class="form-group">
        <label for="comment">Jūsų slaptas nickname:</label>
        <input class="form-control" name="nickname" type="text" />
    </div>
    <div class="form-group">
        <label for="comment">Atsakymas:</label>
        <textarea class="form-control" style="width:400px; height:200px" name="answer"></textarea>
    </div>
    <input type="submit" class="btn btn-default" value="Tikrinti" />
</form>
