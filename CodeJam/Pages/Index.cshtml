@page
@using CodeJam.Interfaces
@model IndexModel
@{
    ViewData["Title"] = "VismaJam konkursas";
}


<form action="/" method="post">
    @Html.AntiForgeryToken()
    <div style="color:red">
    @Html.ValidationSummary()
    </div>
    <div class="form-group">
        <label for="sel1">Problem ID:</label>
        <select class="form-control" name="ProblemId">
            <option value="@Model.ProblemContainer.Problems[0].Id">@Model.ProblemContainer.Problems[0].Id</option>
            <option value="@Model.ProblemContainer.Problems[1].Id">@Model.ProblemContainer.Problems[1].Id</option>
        </select>
    </div>
    <div class="form-group">
        <label for="comment">Your secret nickname:</label>
        <input class="form-control" name="nickname" type="text" />
    </div>
    <div class="form-group">
        <label for="comment">Answer:</label>
        <textarea class="form-control" style="width:400px; height:200px" name="answer"></textarea>
    </div>
    <input type="submit" class="btn btn-default" value="Check" />
</form>
